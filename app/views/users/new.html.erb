
<div id="page-wrapper">
 <div class="main-page signup-page">
        <h2 class="title1">Create User</h2>
        <div class="sign-up-row widget-shadow">


<%= form_for @user, url:users_admin_index_path(@user) do |f| %>
    <div class="sign-u">
                
                <%= f.email_field :email, placeholder:"Email Address", required:""%>
            <div class="clearfix"> </div>
          </div>
          
          
          <div class="sign-u">
                
                <%= f.password_field :password,placeholder:"Password", required:"" %>
            <div class="clearfix"> </div>
          </div>
          <div class="sign-u">
                
                <%= f.password_field :password_confirmation, placeholder:"Confirm Password", required: "" %>
            </div>
            <div class="clearfix"> </div>
          <div class="sub_home">
            
              <%= f.submit "Sign up" %>
            <div class="clearfix"> </div>
          </div>
<% end %>

</div>
</div>
</div>