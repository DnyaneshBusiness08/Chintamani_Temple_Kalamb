<div id="page-wrapper">
  <div class="main-page">
    <div class="tables">
      <div class="bs-example widget-shadow" data-example-id="bordered-table">

        <p id="notice"><%= notice %></p>

       <div class="table-responsive">

        <div class="col-md-2">
          <h4>RECIEPTS</h4>
        </div>

        <div class="col-md-2">
          <%= link_to 'New Reciept', new_reciept_path, class: 'btn btn-info btn-sm' %>
        </div>


        <table class="table table-bordered">
          <thead style="background-color: #f2b33f;">
            <tr>
              <th>Reciept_No.</th>
              <th>Name</th> 
              <th>Address</th> 
              <th>Contact No.</th> 
              <th>Date</th> 
              <th>Reciept Type</th> 
              <th>Payment Mode</th>
              <th>Receiver</th>
              <th>Amount</th>
              <th>Action</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @reciepts.each do |reciept| %>
           
              <tr>
                <td><%= reciept.id %></td>
                <td><%= reciept.name %></td>
                <td><%= reciept.address %></td>
                <td><%= reciept.contact %></td>
                <td><%= reciept.date %></td>
                <td><%= reciept.reciept_type %></td>
                <td><%= reciept.payment_mode %></td>
                <td><%= reciept.reciever %></td>
                <td><%= reciept.amount %></td>
                <td><%= link_to 'Show', reciept, class: 'btn btn-success btn-sm' %></td>
                <td><%= link_to 'Edit', edit_reciept_path(reciept), class: 'btn btn-success btn-sm' %></td>
                <td><%= link_to 'Destroy', reciept, method: :delete, data: { confirm: 'Are you sure?'}, class: 'btn btn-success btn-sm' %></td>
                
              </tr>
              
            <% end %>
          </tbody>

        </table>
      </div>
      <div id='will_paginate_id'>
         <%= will_paginate @reciepts%>
      </div>
        <br>

        <%= link_to 'New Reciept', new_reciept_path, class: 'btn btn-info btn-sm' %>


       </div>
    </div>
  </div>
</div>
