<div id="page-wrapper">
  <div class="main-page">
    <h2 class="title1">Receipts Reports</h2>
    <div class="tables">
      <div class="bs-example widget-shadow" data-example-id="bordered-table">

        <p id="notice"><%= notice %></p>

       <div class="table-responsive">

           
           <%= search_form_for @search, url: search_reports_path, html: {class: "form-inline col-md-12", method: :post} do|f| %>
             <!-- <div class="input-daterange"> -->

                <div class="col-md-5">
                 <lable>From</lable>
                  <%= f.date_field :date_gteq, placeholder: "From", class: "form-control" %>
                </div> 
                
                <div class="col-md-5">
                  <lable>To</lable>
                  <%= f.date_field :date_lteq, placeholder: "To", class: "form-control" %>
                </div>

                <!-- </div> -->
                <div class="col-md-2 form-actions">
                  <%= f.submit "Search", class: "btn btn-success" %>
                </div>
              
            <% end %>
        
  

        <table class="table table-striped table-bordered" style="margin-top: 60px;">
          <thead style="background-color: #f2b33f;">
            <tr>
              <th>Reciept_No.</th>
              <th>Name</th> 
              <th>Address</th> 
              <th>Contact No.</th> 
              <th>Date</th> 
              <th>Reciept Type</th> 
              <th>Payment Mode</th>
              <th>Receiver</th>
              <th>Amount</th>
            </tr>
          </thead>

          <tbody>
            <% @reciepts.each do |reciept| %>
           
              <tr>
                <td><%= reciept.id %></td>
                <td><%= reciept.name %></td>
                <td><%= reciept.address %></td>
                <td><%= reciept.contact %></td>
                <td><%= reciept.date %></td>
                <td><%= reciept.reciept_type %></td>
                <td><%= reciept.payment_mode %></td>
                <td><%= reciept.reciever %></td>
                <td><%= reciept.amount %></td>
                </tr>
              
            <% end %>
          </tbody>

         </table>
        </div>
        
      
       <%= link_to "Download PDF File", reports_path(@reciepts, format: 'pdf',search: "#{params[:q]}")%>
       </div>

    </div>
  </div>
</div>
